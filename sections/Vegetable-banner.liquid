
    <!-- hero section start -->
    <div class="hero container" id="save">
        <div class="hero__text df df__flex">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'text' %}
                        <p class="text__sub hero__text-subheader {{ block.settings.subheading_size }}">{{ block.settings.subheading }}</p>
                    {% when 'heading' %}
                        <p class="hero__text-header {{ block.settings.heading_size }}">{{ block.settings.heading }}</p>
                    {% when 'richtext' %}
                        <div class="text hero__text-des {{ block.settings.description_size }} {% if block.settings.description == blank %} none {% endif %}">{{ block.settings.description }}</div>
                    {% when 'button' %}
                        <a class="btn {% if block.settings.button == blank %} none {% endif %}" href="{{ block.settings.button_link}}">{{ block.settings.button }}</a>
                {% endcase %}
            {% endfor %}
        </div>
        <div class="hero__img transition">
            {%- if section.settings.image != blank -%}
                <img src="{{ section.settings.image | img_url: 'master' }}"/>
            {%- elsif section.settings.image == blank -%}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
        </div>
    </div>
    <!-- hero section end -->
    
