<!-- footer section start -->
        <div class="footer__wrap">
            <div class="footer container__large">
                <div class="row">
                    <div class="col l-6 m-12 c-12">
                        {% for block in section.blocks %}
                            {% case block.type %}
                                {% when "info" %}
                                <div class="footer__contact">
                                    <div class="header__logo df df__unset">
                                        <a href="#">{{ block.settings.heading }}</a>
                                        <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/icon-logo.svg" alt="">
                                    </div>
                                    <div class="footer__contact-des">
                                        <p class="text">
                                            {{ block.settings.description }}
                                            <a href="{{ block.settings.more_link }}" class="text">
                                                {{ block.settings.more }}
                                            </a>
                                        </p>
                                    </div>
                                    <ul class="footer__contact-list">
                                        <li class="footer__contact-item df df__unset">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/phone.svg" alt="">
                                            <div class="footer__contact-item--details df df__flex">
                                                <p class="text__style">Have a question?</p>
                                                <a class="text__style" href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a>
                                            </div>
                                        </li>
                                        <li class="footer__contact-item df df__unset">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/mail.svg" alt="">
                                            <div class="footer__contact-item--details df df__flex">
                                                <p class="text__style">Contact us at</p>
                                                <a class="text__style" href="mailto: {{ block.settings.email }}">{{ block.settings.email }}</a>
                                            </div>
                                        </li>
                                        <li class="footer__contact-item df df__unset">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/map.svg" alt="">
                                            <div class="footer__contact-item--details df df__flex">
                                                <p class="text__style">Address</p>
                                                <a class="text__style" href="">{{ block.settings.location }}</a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                {% endcase %}
                            {% endfor %}
                    </div>
                    <div class="col l-6 m-12 c-12">
                        <div class="footer__info">
                            <div class="footer__info-list df">   

                                {% for block in section.blocks %}
                                    {% case block.type %}
                                        {% when "Column" %}
                                        <div class="footer__info-item">
                                            <h3 class="text__sub">{{ block.settings.Column_heading }}</h3>
                                            <ul class="footer__info-item--wrap">
                                                {% for link in block.settings.menu.links %}
                                                    <li class="footer__info-item--link" ">
                                                        <a class="text" href="{{ link.url }}">{{ link.title }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div> 
                                    {% endcase %}
                                {% endfor %}
                            </div>
                            <div class="footer__info-socials df">
                                <div class="footer__info-socials--icon df">
                                    {%- if settings.social_facebook_link != blank -%}
                                        <a href="{{ settings.social_facebook_link | escape }}">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/facebook.svg" alt="">
                                        </a>
                                    {%- endif -%}

                                    {%- if settings.social_twitter_link != blank -%}
                                        <a href="{{ settings.social_twitter_link | escape }}">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/twitter.svg" alt="">
                                        </a>
                                    {%- endif -%}

                                    {%- if settings.social_pinterest_link != blank -%}
                                        <a href="{{ settings.social_pinterest_link | escape }}">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/dribbble.svg" alt="">
                                        </a>
                                    {%- endif -%}

                                    {%- if settings.social_instagram_link != blank -%}
                                        <a href="{{ settings.social_instagram_link | escape }}">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/instagram.svg" alt="">
                                        </a>
                                    {%- endif -%}

                                    {%- if settings.social_youtube_link != blank -%}
                                        <a href="{{ settings.social_youtube_link | escape }}">
                                            <img src="https://hichaocau.github.io/Figma__vegetables/assets/imgs/figma.svg" alt="">
                                        </a>
                                    {%- endif -%}

                                </div>
                                <div class="footer__info-socials--text">
                                    <p class="text">Â© 2022, All Rights Reserved</p>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer section end -->

        <!-- overlay section start -->
        <div class="overlay hide-on-pc none"></div>
        <!-- overlay section end -->

