
<div class="category container pt0" id="category">
    <div class="category__fresh">
        <div class="row">
            {% for block in section.blocks %}
            <div class="col l-6 m-12 c-12 aos-init aos-animate" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
                <div class="category__fresh-item" >
                    <div class="category__fresh-item--img">
                        {%- if block.settings.Subcategory_image != blank -%}
                            <img src="{{ block.settings.Subcategory_image| img_url: 'master' }}" alt="">
                        {%- elsif block.settings.Subcategory_image == blank -%}
                            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                        </div>                 
                        <div class="category__fresh-item--text">
                            <span class="text">{{ block.settings.heading }}</span>
                            <p class="text__des">{{ block.settings.description_text }}</p>
                            <a class="text" href="{{ block.settings.link }}">{{ block.settings.button }}</a>   
                        </div>
                </div>           
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Subcategory Vegetables",
    "settings": [
       
    ],
    "blocks": [
        {
            "name": "Collection",
            "type": "Subcategory",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Upload image",
                    "id": "Subcategory_image"
                },
                {
                    "type": "text",
                    "label": "Heading",
                    "id": "heading",
                    "default": "Fresh Fruit"
                },
                {
                    "type": "text",
                    "label": "Description",
                    "id": "description_text",
                    "default": "Fresh Summer With Just $200.99"
                },
                {
                    "type": "text",
                    "label": "Button title",
                    "id": "button",
                    "default": "Shop now"
                },
                {   
                    "type": "url",
                    "label": "Button_link",
                    "id": "link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Subcategory Vegetables",
            "blocks": [
                {
                    "type": "Subcategory"
                },
                {
                    "type": "Subcategory"
                }
            ] 
        }
    ]
}
{% endschema %}